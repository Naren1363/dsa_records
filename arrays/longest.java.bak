class longest {
	public static void main (String [] args ){
		int [] arr = {1,2,1,1,1,3,2,1};
		int k =4;
		int left = 0,max=0,sum=0;
		
		for (int i =0;i<arr.length ;i++ ){
			sum +=arr[i];
			while (sum > k ){
				sum-= arr[left];
				left++;}
			if (sum == k){
				int len = i - left+1;
				if (len>max){
					max = len;}
			}
		} System.out.println(max);
	}
}